<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="手机号码: "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@drawable/sel_bg_et"
                android:hint="请输入您的手机号码"
                android:inputType="phone"
                android:paddingLeft="3dp"
                android:textColorHint="#c8c8c8"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="验证码: "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="2"
                android:background="@drawable/sel_bg_et"
                android:hint="请输入验证码"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:textColorHint="#c8c8c8"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/sel_bg_get_code"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/bg_theme"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="登录密码: "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@drawable/sel_bg_et"
                android:hint="请输入您的登录密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColorHint="#c8c8c8"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="重置密码: "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_again"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@drawable/sel_bg_et"
                android:hint="请再次输入您的密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColorHint="#c8c8c8"
                android:textSize="16dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="我已经认真阅读并同意医保到家的用户协议"
            android:textColor="#999"
            android:textSize="12dp" />

        <View style="@style/divider_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sel_login"
        android:gravity="center"
        android:text="立刻注册"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sel_register"
        android:gravity="center"
        android:text="去登陆"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>
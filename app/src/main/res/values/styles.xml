<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
        <!--选项卡的颜色属性-->
        <item name="textColorTabDefault">@color/text_black</item>
        <item name="textColorTabSelected">@color/bg_theme</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>
    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@drawable/sel_footer_text_color</item>
    </style>
</resources>
